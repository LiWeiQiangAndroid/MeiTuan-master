<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RadioGroup
        android:id="@+id/Bottomlayout_Radiogroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:id="@+id/bottomlayout_rb1"
            android:drawableTop="@drawable/menu_deal"
            android:text="首页"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:id="@+id/bottomlayout_rb2"
            android:drawableTop="@drawable/menu_poi"
            android:text="商家"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:id="@+id/bottomlayout_rb3"
            android:drawableTop="@drawable/menu_user"
            android:text="我的"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/bottomlayout_rb4"
            android:button="@null"
            android:drawableTop="@drawable/menu_more"
            android:text="更多"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>


    </RadioGroup>
</merge>
